*filter
:INPUT ACCEPT [0:0]
:FORWARD ACCEPT [0:0]
:OUTPUT ACCEPT [0:0]
-A INPUT -i lo -j ACCEPT
-A INPUT -m limit --limit 1/s -j LOG --log-prefix "ip6tables dropped input " --log-level 7
-A INPUT -j REJECT --reject-with icmp6-adm-prohibited
-A FORWARD -m limit --limit 1/s -j LOG --log-prefix "ip6tables dropped forward " --log-level 7
-A FORWARD -j REJECT --reject-with icmp6-adm-prohibited
-A OUTPUT -o lo -j ACCEPT
-A OUTPUT -m limit --limit 1/s -j LOG --log-prefix "ip6tables dropped output " --log-level 7
-A OUTPUT -j REJECT --reject-with icmp6-adm-prohibited
COMMIT
